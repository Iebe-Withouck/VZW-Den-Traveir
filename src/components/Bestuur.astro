---
import siebe from '../assets/Siebe.png';
import plovie from '../assets/Plovie.png';
import berquin from '../assets/Berquin.png';
import marthe from '../assets/Marthe.png';
import jarne from '../assets/Jarne.png';
import vanhie from '../assets/Vanhie.png';
import lomme from '../assets/Lomme.png';
import elke from '../assets/Elke.png';
---

<section id="bestuur" class="bestuur-section">
	<h2 class="about-title">Bestuur</h2>
	<div class="bestuur-container">
		
		<div class="bestuur-grid">
			<div class="bestuur-card">
				<div class="card-img">
					<img src={siebe.src} alt="Bestuurslid" />
				</div>
				<h3 class="card-name">Siebe Selschotter</h3>
				<p class="card-function">Voorzitter, Klusjesdienst</p>
			</div>

			<div class="bestuur-card">
				<p class="card-function">Minivoetbal Coach</p>
				<h3 class="card-name">Niels Berquin</h3>
				<div class="card-img">
					<img src={berquin.src} alt="Bestuurslid" />
				</div>
			</div>

			<div class="bestuur-card">
				<div class="card-img">
					<img src={vanhie.src} alt="Bestuurslid" />
				</div>
				<h3 class="card-name">Louïs Vanhie</h3>
				<p class="card-function">AB-Inbev Contacteur</p>
			</div>

			<div class="bestuur-card">
				<p class="card-function">Reclame & Socials</p>
				<h3 class="card-name">Lomme Tack</h3>
				<div class="card-img">
					<img src={lomme.src} alt="Bestuurslid" />
				</div>
			</div>

			<div class="bestuur-card">
				<div class="card-img">
					<img src="https://via.placeholder.com/200x200?text=Member+5" alt="Bestuurslid" />
				</div>
				<h3 class="card-name">Iebe Withouck</h3>
				<p class="card-function">Klusjesdienst</p>
			</div>

			<div class="bestuur-card">
				<p class="card-function">EHBO Verantwoordelijke</p>
				<h3 class="card-name">Marthe Vanpoucke</h3>
				<div class="card-img">
					<img src={marthe.src} alt="Bestuurslid" />
				</div>
			</div>

			<div class="bestuur-card">
				<div class="card-img">
					<img src={plovie.src} alt="Bestuurslid" />
				</div>
				<h3 class="card-name">Louis Plovie</h3>
				<p class="card-function">Dartsman</p>
			</div>

			<div class="bestuur-card">
				<p class="card-function">Leeggoed Verantwoordelijke</p>
				<h3 class="card-name">Elke Selschotter</h3>
				<div class="card-img">
					<img src={elke.src} alt="Bestuurslid" />
				</div>
			</div>

			<div class="bestuur-card">
				<div class="card-img">
					<img src={jarne.src} alt="Bestuurslid" />
				</div>
				<h3 class="card-name">Jarne Ombecq</h3>
				<p class="card-function">Conciërge</p>
			</div>

			<div class="bestuur-card">
				<p class="card-function">Financieel Verantwoordelijke</p>
				<h3 class="card-name">Imke Decoene</h3>
				<div class="card-img">
					<img src="https://via.placeholder.com/200x200?text=Member+10" alt="Bestuurslid" />
				</div>
			</div>
		</div>
	</div>
	<div class="banner">
		<div class="banner-content">
			<span>VZW Den Traveir • Samen Bouwen • Samen Vieren • VZW Den Traveir • Samen Bouwen • Samen Vieren • </span>
			<span>VZW Den Traveir • Samen Bouwen • Samen Vieren • VZW Den Traveir • Samen Bouwen • Samen Vieren • </span>
		</div>
	</div>
</section>

<style>
	.bestuur-section {
		padding: 4rem 0;
        margin-top: -8rem;
		display: flex;
		flex-direction: column;
	}

	.about-title {
		align-self: flex-start;
		margin-left: 8.5rem;
		font-size: 7rem;
		color: #B82424;
		text-align: left;
        font-family: Creolia, sans-serif;
	}

	.bestuur-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 5rem;
	}

	.bestuur-title {
		font-size: 3rem;
		color: #B82424;
		text-align: center;
		margin-bottom: 4rem;
		font-family: Creolia, sans-serif;
	}

	.bestuur-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0rem 2rem;
		justify-content: center;
		align-items: flex-start;
		align-content: flex-start;
		min-height: 600px;
		margin-top: 2rem;
	}

	.bestuur-card {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 1rem;
		width: auto;
		max-width: 500px;
		position: relative;
		margin-bottom: 5rem;
	}

	.bestuur-card:nth-child(1) {
		transform: translate(20px, 40px);
	}

	.bestuur-card:nth-child(2) {
		transform: translate(-30px, 80px);
	}

	.bestuur-card:nth-child(3) {
		transform: translate(50px, -20px);
	}

	.bestuur-card:nth-child(4) {
		transform: translate(-40px, 120px);
	}

	.bestuur-card:nth-child(5) {
		transform: translate(30px, 60px);
	}

	.bestuur-card:nth-child(6) {
		transform: translate(-50px, 10px);
	}

	.bestuur-card:nth-child(7) {
		transform: translate(40px, 100px);
	}

	.bestuur-card:nth-child(8) {
		transform: translate(-20px, 50px);
	}

	.bestuur-card:nth-child(9) {
		transform: translate(60px, 30px);
	}

	.bestuur-card:nth-child(10) {
		transform: translate(-60px, 70px);
	}

	.card-img {
		width: 100px;
		height: 100px;
		border-radius: 12%;
		overflow: hidden;
		flex-shrink: 0;
		border: 1px solid #B82424;
	}

	.card-img img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.card-name {
		font-size: 0.95rem;
		color: #B82424;
		font-weight: 600;
		margin-bottom: 0.2rem;
		text-align: left;
	}

	.card-function {
		font-size: 0.8rem;
		color: #666;
		margin: 0;
		text-align: left;
	}

	.banner {
		width: 100%;
		background: #B82424;
		padding: 2rem 0;
		overflow: hidden;
		margin-top: 10rem;
	}

	.banner-content {
		display: flex;
		white-space: nowrap;
		animation: scroll 30s linear infinite;
	}

	.banner-content span {
		font-size: 2.5rem;
		font-weight: 700;
		color: #F2EEE1;
		font-family: Creolia, sans-serif;
		padding-right: 2rem;
	}

	@keyframes scroll {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}
</style>
