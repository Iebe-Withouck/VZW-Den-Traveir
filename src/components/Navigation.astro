---
const links: { href: string; label: string }[] = [
	{ href: '/about', label: 'About' },
	{ href: '/services', label: 'Services' },
	{ href: '/blog', label: 'Blog' },
	{ href: '/contact', label: 'Contact' },
];
---

<nav class="site-nav" role="navigation" aria-label="Main navigation">
	<a class="logo" href="/">
		<img src="/src/assets/logo_traveir_NORMAL.png" alt="Traveir logo" width="40" height="36" />
	</a>

	<input class="nav-toggle" type="checkbox" id="nav-toggle" aria-hidden="true" />
	<label class="nav-toggle-label" for="nav-toggle" aria-hidden="true">â˜°</label>

	<ul class="nav-links">
		{links.map(link => (
			<li><a href={link.href}>{link.label}</a></li>
		))}
	</ul>
</nav>

<style>
	:root {
		--nav-gap: 1rem;
	}

	.site-nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: var(--nav-gap);
		padding: 0.5rem 1rem;
		background: transparent;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: inherit;
	}

	.logo img { display: block; }
	.brand { font-weight: 700; font-size: 1rem; letter-spacing: 0.2px; }

	.nav-links {
		list-style: none;
		display: flex;
		gap: 1rem;
		margin: 0;
		padding: 0;
		align-items: center;
	}

	.nav-links a {
		text-decoration: none;
		color: inherit;
		padding: 0.25rem 0.5rem;
		border-radius: 6px;
		font-weight: 500;
	}

	.nav-links a:hover,
	.nav-links a:focus {
		background: rgba(0,0,0,0.06);
		outline: none;
	}

	.nav-toggle { display: none; }
	.nav-toggle-label { display: none; cursor: pointer; font-size: 1.25rem; }

	@media (max-width: 720px) {
		.nav-toggle { position: absolute; left: -9999px; }
		.nav-toggle-label { display: block; }

		.nav-links {
			position: absolute;
			top: 56px;
			right: 1rem;
			background: var(--astro-bg, #fff);
			flex-direction: column;
			padding: 0.5rem;
			border-radius: 8px;
			display: none;
			box-shadow: 0 8px 20px rgba(0,0,0,0.08);
			min-width: 160px;
		}

		.nav-links li { margin: 0.25rem 0; }
		.nav-toggle:checked + .nav-toggle-label + .nav-links { display: flex; }
	}
</style>
